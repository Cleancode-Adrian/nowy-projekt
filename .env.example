APP_NAME=WebFreelance
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Google reCAPTCHA v3 (security)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
# Optional: enforce hostname from reCAPTCHA response (e.g. "your-domain.com")
RECAPTCHA_EXPECTED_HOSTNAME=
# Score thresholds (0.0 - 1.0). Higher = stricter.
RECAPTCHA_MIN_SCORE_LOGIN=0.7
RECAPTCHA_MIN_SCORE_REGISTER=0.6
RECAPTCHA_MIN_SCORE_ADMIN_LOGIN=0.8

APP_LOCALE=pl
APP_FALLBACK_LOCALE=pl
APP_FAKER_LOCALE=pl_PL

APP_TIMEZONE=Europe/Warsaw

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webfreelance
DB_USERNAME=webfreelance_user
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=file

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=""

VITE_APP_NAME=""
